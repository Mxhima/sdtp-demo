
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Insurance Profile</h1>

<h2>View Insurance Profiles</h2>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Insurance ID
            </th>
            <th>
                Email
            </th>
            <th>
                Insurance Name
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Insurance_ID"]
                </td>
                <td>
                    @Model.Rows[i]["Email"]
                </td>
                <td>
                    @Model.Rows[i]["Insurance_Name"]
                </td>
            </tr>
        }
    </tbody>
</table>

