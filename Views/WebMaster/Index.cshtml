@model System.Data.DataTable

@*Register User*@
<div class="col-md-6">
    <h2>Register User</h2>
    <form>
        <!-- Full names -->
        <div class="form-outline mb-4">
            <div class="form-outline">
                <input type="text" id="form3Example1" class="form-control" />
                <label class="form-label" for="form3Example1">Adminstrator Name</label>
            </div>
        </div>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="email" id="form3Example2" class="form-control" />
            <label class="form-label" for="form3Example2">Email address</label>
        </div>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="email" id="form3Example2" class="form-control" />
            <label class="form-label" for="form3Example2">Email address</label>
        </div>

        <!-- Account Type -->
        <div class="form-outline mb-4">
            <label class="visually-hidden" for="inlineFormSelectPref">Account Type</label>
            <select class="select">
                <option value="1">Police</option>
                <option value="2">Insurance</option>
                <option value="3">RDA</option>
            </select>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="form3Example3" class="form-control" />
            <label class="form-label" for="form3Example3">Password</label>
        </div>

        <!-- Password Confirm -->
        <div class="form-outline mb-4">
            <input type="password" id="form3Example4" class="form-control" />
            <label class="form-label" for="form3Example4">Confirm Password</label>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
    </form>
</div>

